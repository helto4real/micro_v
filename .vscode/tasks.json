{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "format",
            "type": "shell",
            "command": "v fmt -w ${file}",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$go"
        },
        {
            "label": "mv",
            "type": "process",
            "command": "cmd/v/v",
            "args": [
                "${relativeFile}"
            ],
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$go"
        },
        {
            "label": "build",
            "type": "shell",
            "command": "v",
            "args": [
                "-g",
                "-keepc",
                "cmd/v/v.v"
            ],
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$go"
        },
        {
            "label": "test",
            "type": "shell",
            "command": "v",
            "args": [
                "-g",
                "-keepc",
                "test",
                "."
            ],
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$go"
        }
    ]
}